{% schema %}
{
  "name": "SCMA Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title",
      "default": "Elegant Developers"
    },
    {
      "type": "text",
      "id": "banner_subtitle",
      "label": "Banner Subtitle",
      "default": "ONLY WORKING AT FSL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CONTACT US"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "SCMA Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="scma-banner">
  {% if section.settings.banner_image %}
    <img 
      src="{{ section.settings.banner_image | img_url: 'master' }}" 
      alt="Banner Image"
      class="scma-banner__image"
    >
  {% endif %}

  <div class="scma-banner__content">
    <h2 class="scma-banner__title">{{ section.settings.banner_title }}</h2>
    <p class="scma-banner__subtitle">{{ section.settings.banner_subtitle }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="scma-banner__button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
/* === Banner Container === */
.scma-banner {
  position: relative;
  width: 100%;          /* ðŸ‘ˆ full responsive width */
  max-width: 1512px;    /* ðŸ‘ˆ design ka max size */
  height: 500px;        
  margin: 80px auto 0;   /* top margin aur center */
  background: #d6bc8a;
  overflow: hidden;     /* ðŸ‘ˆ scroll hatane ke liye */
  box-sizing: border-box;
}

/* === Banner Image === */
.scma-banner__image {
  position: absolute;
  width: 384px;    
  height: 470px;  
  top: 110px;
  left: 171px;
  object-fit: cover;
  max-width: 100%; /* ðŸ‘ˆ responsive adjust */
}

/* === Content Wrapper === */
.scma-banner__content {
  position: absolute;
  width: 663px;
  top: 194px;
  left: 647px;
  color: #000;
  max-width: calc(100% - 700px); /* ðŸ‘ˆ prevents overflow */
}

/* === Heading (Elegant Developers) === */
.scma-banner__title {
  font-family: "Playfair Display", serif;
  font-weight: 400;
  font-size: 67px;
  line-height: 100%;
  margin: 0 0 20px;
  overflow: hidden;
}

/* === Subtitle (ONLY WORKING AT FSL) === */
.scma-banner__subtitle {
  font-family: "Cambay", sans-serif;
  font-weight: 400;
  font-size: 28px;
  line-height: 100%;
  margin: 0 0 40px;
}

/* === Button === */
.scma-banner__button {
  display: inline-block;
  width: 221px;   
  height: 62px;   
  line-height: 62px; 
  text-align: center;

  font-family: "Cambay", sans-serif;
  font-weight: 700;
  font-size: 28px;

  background: transparent;
  border: 4px solid #fff;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.scma-banner__button:hover {
  background: #fff;
  color: #000;
}

/* === Responsive Design === */
@media (max-width: 991px) {
  .scma-banner {
    height: auto;
    padding: 40px 20px;
    text-align: center;
  }
  .scma-banner__image {
    position: static;
    margin: 0 auto 20px;
    display: block;
  }
  .scma-banner__content {
    position: static;
    width: 100%;
    max-width: 100%;
  }
  .scma-banner__title {
    font-size: 40px;
  }
  .scma-banner__subtitle {
    font-size: 20px;
  }
  .scma-banner__button {
    width: auto;
    padding: 10px 20px;
    font-size: 18px;
    height: auto;
    line-height: normal;
  }
}
</style>